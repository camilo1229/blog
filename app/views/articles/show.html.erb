<article class="botton-space"> 
	<%= article_cover @article.cover.url %><!-- article_cover: nombre del metodo helpers -->
	<div class="row center-xs">
		<div class="col-xs-12 ligth-border col-md-7">
			<h1 class="be-big blue"><%= @article.title %></h1>			
				<p class="text-right be-small">
					<%= link_to "Atras", articles_path, class:"underline" %> - 
					<span class="red"><%=  @article.visits_count %> visita(s)</span> - 
					<% unless @article.user.nil? %>
						Escrito por: <%= @article.user.email %>
					<%end%>
				</p>
			<div class="text-justify">
				<%= Sanitize.fragment(@article.body, Sanitize::Config::RELAXED).html_safe  %> <!-- html_safe: Muestra la informacion con el marcado de EpicEdictor--> <!--Sanitize: Limpia este fragmento, quita los scripts -->
			</div>
			<div class="to-space">
				<%= render "articles/comments" %> <!--Me muestra los comentarios -->
			</div>
		</div>
	</div>
</article>>